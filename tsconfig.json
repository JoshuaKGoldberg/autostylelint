{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "outDir": "lib"
    },
    "exclude": [
        "node_modules",
        "test/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
